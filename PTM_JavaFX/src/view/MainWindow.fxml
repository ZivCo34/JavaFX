<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<?import view.PipeGameDisplayer?>


<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open" />
                  <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#changeTheme" text="Theme"/>
                  <MenuItem mnemonicParsing="false" text="Delete"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About"/>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
	  <PipeGameDisplayer fx:id="pipeGameDisplayer" height="1000.0" width="1000.0" BorderPane.alignment="CENTER"/>
	  <!-- <Canvas height="700.0" width="700.0" BorderPane.alignment="CENTER" /> -->
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Time:" />
            <Label fx:id="timePlayed" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Steps:" />
            <Label fx:id="stepsPlayed" />
         </children>
      </HBox>
   </bottom>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#start" text="Start" />
            <Button mnemonicParsing="false" text="Stop" />
            <Button mnemonicParsing="false" onAction="#solve" text="Solve" />
            <Button mnemonicParsing="false" onAction="#checkWin" text="check" />
         </children>
      </VBox>
   </left>
</BorderPane>
